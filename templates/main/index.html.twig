{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet" />
    <link href="{{ asset('css/main.css') }}" rel="stylesheet" />
    <title>Search</title>

{% endblock %}

{% block body %}
    <div class="s01">
    <form action="{{ path('search') }}" target="_blank">
        <fieldset>
            <legend>Search people</legend>
        </fieldset>
        <div class="inner-form">
            <div class="input-field first-wrap">
                <input id="search" type="text" name="_firstname" placeholder="Firstname" />
            </div>
            <div class="input-field first-wrap">
                <input id="search" type="text" name="_lastname" placeholder="Lastname" />
            </div>
            <div class="input-field third-wrap">
                <input id="location" type="text"  name="_city" placeholder="City" />
            </div>
            <div class="input-field third-wrap">
                <input id="location" type="text"  name="_state" placeholder="State" />
            </div>
            <div class="input-field third-wrap">
                <input class="btn-search" type="submit" value="Search">
            </div>
        </div>
    </form>
</div>
{% endblock %}